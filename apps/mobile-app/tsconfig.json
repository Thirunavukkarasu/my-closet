{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "mobile-app/.expo/types/**/*.ts",
    "expo-env.d.ts",
    "**/*.jsx",
    "**/*.js",
    "nativewind-env.d.ts",
    ".expo/types/**/*.ts"
  ]
}
